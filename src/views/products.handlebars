
<div class="container title">
  <div class="pagination-buttons">
    <a href="/products?page={{paginationprev}}">Previous</a>
    <a href="/products?page={{paginationnext}}">Next</a>
</div>
<form action="/products" method="GET">
<input type="text" placeholder="Buscar productos" name="filter">
<button type="submit">Buscar</button>
</form>
<form method="POST">
    <label for="productLimit">Mostrar:</label>
    <select name="productLimit" id="productLimit" onchange="this.form.submit()">
        {{#each options}}
            <option value="{{this.value}}" {{#if (eq selected this.value)}}selected{{/if}}>{{this.label}}</option>
        {{/each}}
    </select>
</form>
    {{topTitle}}<br>
    {{limit}}
</div>
<div class="container">
<div class="d-flex productos" id="containerElementos">
  <div class="cards-container">
    {{#each products}}
  <div class="card" style="width: 18rem;">
  <img class="card-img-top" src="{{thumbnail}}" alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title">{{title}}</h5>
    <p class="card-text">{{price}}</p>
    <a href="{{link}}" class="btn btn-primary">Ver prodcuto Â»</a>
